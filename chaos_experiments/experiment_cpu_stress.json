{
    "title": "Uji Ketahanan Terhadap Beban CPU Tinggi",
    "description": "Memberikan beban CPU 100% pada VM GCP selama 60 detik.",
    "steady_state_hypothesis": {
        "title": "Layanan GCP harus tetap merespons",
        "probes": [
            {
                "type": "probe",
                "name": "check-gcp-service-is-responsive",
                "tolerance": 200,
                "provider": {
                    "type": "http",
                    "url": "http://<IP_PUBLIK_VM_GCP_ANDA>"
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "stress-cpu-on-gcp-vm",
            "provider": {
                "type": "process",
                "path": "ssh",
                "args": "root@<IP_PUBLIK_VM_GCP_ANDA> stress-ng --cpu 1 --cpu-load 100 --timeout 60s"
            }
        }
    ]
}